import numpy as np
import matplotlib.pyplot as plt

# Parâmetros da função
a = 1.0             # Amplitude
omega = 2 * np.pi   # Frequência angular (rad/s)
phi0 = np.pi / 4    # Fase inicial (rad)

# Geração dos valores de tempo
t = np.linspace(0, 2, 1000)  # Tempo de 0 a 2 segundos

# Cálculo da função
y = a * np.cos(omega * t + phi0)

# Plotando o gráfico
plt.figure(figsize=(10, 4))
plt.plot(t, y, label=r'$a \cdot \cos(\omega t + \phi_0)$')
plt.title('Função Cosseno: $a \\cdot \\cos(\\omega t + \\phi_0)$')
plt.xlabel('Tempo (s)')
plt.ylabel('Amplitude')
plt.grid(True)
plt.legend()
plt.tight_layout()
plt.show()
